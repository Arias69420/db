#include<stdio.h>

int max, min;
int a[100];

void maxmin(int i, int j) {
    int mid;

    if (i == j) {
        max = min = a[i];
    } else {
        if (j == i + 1) {
            if (a[i] < a[j]) {
                max = a[j];
                min = a[i];
            } else {
                max = a[i];
                min = a[j];
            }
        } else {
            mid = (i + j) / 2;
            maxmin(i, mid);
            int max1 = max, min1 = min;
            maxmin(mid + 1, j);
            if (max < max1)
                max = max1;
            if (min > min1)
                min = min1;
        }
    }
}

int main() {
    int i, num;
    printf("\nEnter the total number of numbers: ");
    scanf("%d", &num);
    printf("Enter the numbers: \n");
    for (i = 0; i < num; i++)
        scanf("%d", &a[i]);
    max = min = 0;
    maxmin(0, num - 1);
    printf("Maximum number is : %d\n", max);
    printf("Minimum number is : %d\n", min);
    return 0;
}
